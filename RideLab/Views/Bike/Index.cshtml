@using System.Linq
@model IEnumerable<Bike>
@{
    ViewData["Title"] = "Bikes";
}

<div class="d-flex justify-content-between align-items-center mb-3">
    <h1 class="mb-0">Bikes</h1>
    @if (User.Identity?.IsAuthenticated ?? false)
    {
        <a asp-action="Create" class="btn btn-primary">Add bike</a>
    }
</div>

<table class="table table-striped align-middle">
    <thead>
    <tr>
        <th>Name</th>
        <th>Manufacturer</th>
        <th>Model</th>
        <th>Year</th>
        <th>OBD sessions</th>
        <th>Service reminders</th>
        <th></th>
    </tr>
    </thead>
    <tbody>
    @foreach (var bike in Model)
    {
        <tr>
            <td>@bike.Name</td>
            <td>@bike.Manufacturer</td>
            <td>@bike.Model</td>
            <td>@bike.Year</td>
            <td>@bike.ObdSessions.Count</td>
            <td>@bike.ServiceReminders.Count(r => !r.IsCompleted)</td>
            <td class="text-end">
                <a asp-action="Details" asp-route-id="@bike.Id" class="btn btn-sm btn-outline-secondary">Details</a>
            </td>
        </tr>
    }
    </tbody>
</table>
