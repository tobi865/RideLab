@model Bike
@{
    ViewData["Title"] = "Edit bike";
}

<h1>Edit bike</h1>

<form asp-action="Edit" method="post" class="row g-3">
    <input type="hidden" asp-for="Id" />
    <input type="hidden" asp-for="CreatedAtUtc" />
    <div class="col-md-6">
        <label asp-for="Name" class="form-label"></label>
        <input asp-for="Name" class="form-control" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>
    <div class="col-md-6">
        <label asp-for="Manufacturer" class="form-label"></label>
        <input asp-for="Manufacturer" class="form-control" />
    </div>
    <div class="col-md-6">
        <label asp-for="Model" class="form-label"></label>
        <input asp-for="Model" class="form-control" />
    </div>
    <div class="col-md-3">
        <label asp-for="Year" class="form-label"></label>
        <input asp-for="Year" class="form-control" />
    </div>
    <div class="col-md-3">
        <label asp-for="Vin" class="form-label"></label>
        <input asp-for="Vin" class="form-control" />
    </div>
    <div class="col-md-6">
        <label asp-for="Engine" class="form-label"></label>
        <input asp-for="Engine" class="form-control" />
    </div>
    <div class="col-12">
        <label asp-for="Notes" class="form-label"></label>
        <textarea asp-for="Notes" class="form-control"></textarea>
    </div>
    <div class="col-12">
        <button type="submit" class="btn btn-primary">Save changes</button>
        <a asp-action="Details" asp-route-id="@Model.Id" class="btn btn-outline-secondary">Cancel</a>
    </div>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
