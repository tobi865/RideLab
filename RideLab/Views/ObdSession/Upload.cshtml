@model ObdSessionUploadViewModel
@{
    ViewData["Title"] = "Upload OBD session";
}

<h1>Upload OBD session</h1>

<form asp-action="Upload" method="post" enctype="multipart/form-data" class="row g-3">
    <div class="col-md-6">
        <label asp-for="BikeId" class="form-label"></label>
        <select asp-for="BikeId" asp-items="ViewBag.BikeId" class="form-select"></select>
        <span asp-validation-for="BikeId" class="text-danger"></span>
    </div>
    <div class="col-md-3">
        <label asp-for="SessionDate" class="form-label"></label>
        <input asp-for="SessionDate" class="form-control" />
    </div>
    <div class="col-md-6">
        <label asp-for="TelemetryFile" class="form-label"></label>
        <input asp-for="TelemetryFile" class="form-control" />
    </div>
    <div class="col-12">
        <label asp-for="Notes" class="form-label"></label>
        <textarea asp-for="Notes" class="form-control" rows="3"></textarea>
    </div>
    <div class="col-12">
        <button type="submit" class="btn btn-primary">Upload</button>
        <a asp-action="Index" class="btn btn-outline-secondary">Cancel</a>
    </div>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
