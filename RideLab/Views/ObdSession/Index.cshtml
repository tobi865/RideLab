@model IEnumerable<ObdSession>
@{
    ViewData["Title"] = "OBD sessions";
}

<div class="d-flex justify-content-between align-items-center mb-3">
    <h1 class="mb-0">OBD sessions</h1>
    @if (User.Identity?.IsAuthenticated ?? false)
    {
        <a asp-action="Upload" class="btn btn-primary">Upload session</a>
    }
</div>

<table class="table table-hover align-middle">
    <thead>
    <tr>
        <th>Bike</th>
        <th>Date</th>
        <th>Average RPM</th>
        <th>Max throttle</th>
        <th>Notes</th>
        <th></th>
    </tr>
    </thead>
    <tbody>
    @foreach (var session in Model)
    {
        <tr>
            <td>@session.Bike?.Name</td>
            <td>@session.SessionDateUtc.ToLocalTime()</td>
            <td>@session.AverageRpm?.ToString("F0")</td>
            <td>@session.MaxThrottlePosition?.ToString("F0")%</td>
            <td>@session.Notes</td>
            <td class="text-end">
                <a asp-action="Details" asp-route-id="@session.Id" class="btn btn-sm btn-outline-secondary">Details</a>
            </td>
        </tr>
    }
    </tbody>
</table>
