@model IEnumerable<DtcCode>
@{
    ViewData["Title"] = "Diagnostic Trouble Codes";
}

<div class="d-flex justify-content-between align-items-center mb-3">
    <h1 class="mb-0">DTC catalogue</h1>
    @if (User.Identity?.IsAuthenticated ?? false)
    {
        <a asp-action="Create" class="btn btn-primary">Add DTC</a>
    }
</div>

<table class="table table-striped">
    <thead>
    <tr>
        <th>Code</th>
        <th>Severity</th>
        <th>Description</th>
        <th></th>
    </tr>
    </thead>
    <tbody>
    @foreach (var dtc in Model)
    {
        <tr>
            <td>@dtc.Code</td>
            <td>@dtc.Severity</td>
            <td>@dtc.Description</td>
            <td class="text-end">
                <a asp-action="Details" asp-route-id="@dtc.Id" class="btn btn-sm btn-outline-secondary">Details</a>
            </td>
        </tr>
    }
    </tbody>
</table>
